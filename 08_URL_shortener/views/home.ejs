<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
  </head>
  <body>
    <h1>URL shortner</h1>
    <div>
      <form method="POST" action="/url">
        <label for="">Enter your original URL</label>
        <% if (locals.id) { %>
        <p>URL generated: http://localhost:8000/url/<%= id %></p>
        <% } %>
        <input type="text" placeholder="https://example.com" name="url" />
        <button type="submit">GENERATE</button>
      </form>
    </div>
    
    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <th>Sl. no.</th>
          <th>Short id</th>
          <th>Redirect</th>
          <th>clicks</th>
        </thead>
        <thead>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </thead>
      </table>
      <% } %>
    </div>
  </body>
</html>
